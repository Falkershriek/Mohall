<UserControl x:Class="Mohall.Views.ControlReturn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mohall.Views"
             mc:Ignorable="d">
    <Grid>
        <Button x:Name="return_button" Content="Return to Menu" MinWidth="400" Width="Auto" Command="{Binding ReturnToMenuCommand, Mode=OneWay}" CommandParameter="{Binding ElementName=MainWindow}"/>
    </Grid>
</UserControl>
